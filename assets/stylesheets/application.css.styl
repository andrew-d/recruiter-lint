@import './mixins'

html, body {
  padding: 0
  margin: 0
}

body {
  margin: 0
  padding: 0
  height: 100%
  background-color: #fff
  font-family: 'Open Sans',sans-serif
  font-size: 14px
  line-height: 20px
  color: #333
}

h1 {
  margin: 0
  padding: 0
  font-size: 22px
  font-weight: 500
}

h2 {
  margin: 0
  padding: 0
  font-size: 18px
  font-weight: 800
}

h1, h2, div, header, article, section {
  box-sizing: border-box
}

header {
  height: 50px
  line-height: 50px
  padding: 0 15px
}

article {
  top: 40px
  left: 0
  right: 0
  bottom: 0
  position: absolute

  textarea {
    display: block
    margin: 15px
    position: absolute
    left: 0px
    top: 0px
    right: 200px
    bottom: 0px
    outline: none
    padding: 7px 8px
    resize: none
  }

  section {
    padding: 15px
    position: absolute
    top: 0px
    right: 0px
    bottom: 0px
    width: 200px
  }
}